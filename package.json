{
  "name": "devboost-pro",
  "displayName": "DevBoost Pro",
  "description": "Boost your development productivity with project tree export, snippet management, collaboration, task running, and a customizable dashboard",
  "version": "0.1.0",
  "publisher": "AbdulMateen",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devsphere-apps/DevBoostPro"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devboost-pro.exportProjectTree",
        "title": "DevBoost: Export Project Tree"
      },
      {
        "command": "devboost-pro.manageSnippets",
        "title": "DevBoost: Manage Code Snippets"
      },
      {
        "command": "devboost-pro.startCollaboration",
        "title": "DevBoost: Start Collaboration Session"
      },
      {
        "command": "devboost-pro.runTask",
        "title": "DevBoost: Run Task"
      },
      {
        "command": "devboost-pro.openDashboard",
        "title": "DevBoost: Open Developer Dashboard"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devboost-pro",
          "title": "DevBoost Pro",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "devboost-pro": [
        {
          "id": "devboost-snippets",
          "name": "Snippets"
        },
        {
          "id": "devboost-tasks",
          "name": "Tasks"
        },
        {
          "id": "devboost-collaboration",
          "name": "Collaboration"
        }
      ]
    },
    "configuration": {
      "title": "DevBoost Pro",
      "properties": {
        "devboost-pro.projectTree.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git"
          ],
          "description": "Patterns to exclude from project tree export"
        },
        "devboost-pro.snippets.storageLocation": {
          "type": "string",
          "default": "workspace",
          "enum": [
            "workspace",
            "global"
          ],
          "description": "Where to store code snippets"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^11.1.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
